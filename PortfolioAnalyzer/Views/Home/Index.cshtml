<div>
    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <h3>Get a Quote:</h3>
            <input type="text" name="ticker" value="@ViewData["Ticker"]" />
            <input type="submit" value="Get Quote" class="btn btn-primary" />
        </div>
    </form>
</div>

@if ((string)ViewData["Ticker"] != "")
{
    <div>
        <h4>@Model.Quote.CompanyName (@Model.Quote.Symbol)</h4>
        <h5>$ @Model.Quote.LatestPrice (@Model.Quote.Change %)</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Previous Close</dt>
            <dd class="col-sm-10">@Model.Quote.PreviousClose</dd>
            <dt class="col-sm-2">Open</dt>
            <dd class="col-sm-10">@Model.Quote.Open</dd>
            <dt class="col-sm-2">Volume</dt>
            <dd class="col-sm-10">@Model.Quote.Volume</dd>
            <dt class="col-sm-2">Average Volume</dt>
            <dd class="col-sm-10">@Model.Quote.AvgTotalVolume</dd>
            <dt class="col-sm-2">52 Week High</dt>
            <dd class="col-sm-10">@Model.Quote.Week52High</dd>
            <dt class="col-sm-2">52 Week Low</dt>
            <dd class="col-sm-10">@Model.Quote.Week52Low</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Test</dt>
            <dd class="col-sm-10">Test</dd>
            <dt class="col-sm-2">Test</dt>
            <dd class="col-sm-10">Test</dd>
            <dt class="col-sm-2">Test</dt>
            <dd class="col-sm-10">Test</dd>
            <dt class="col-sm-2">Test</dt>
